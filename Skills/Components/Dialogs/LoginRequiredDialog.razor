@using Skills.Services

<MudDialog>
    <DialogContent>
        <MudIconButton Class="ml-n4" Icon="@IconsF.Close" Color="Color.Dark" OnClick="@(() => Dialog.Close(false))" />
        <MudStack Class="pb-2 px-4" Row="false" Spacing="0">
            <MudText Class="open-sans-600" Typo="Typo.h5" Align="Align.Center" GutterBottom>Hello!</MudText>
            <MudText Class="open-sans-600" Align="Align.Center" GutterBottom>Vous devez vous connecter <br/>pour accéder à ce contenu !</MudText>
            <MudButton Color="Color.Default" StartIcon="@IconsB.MicrosoftWindows" IconColor="Color.Dark" IconSize="Size.Large"
                       OnClick="@RedirectToLoginPage" Class="open-sans-600 mt-3 mb-2 hoverable" Style="text-transform: none; background-color: rgba(0, 0, 0, 0.058823529411764705);">
                Connectez-vous ici !
            </MudButton>
        </MudStack>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] public MudDialogInstance Dialog { get; set; } = null!;
    [Inject] public ThemeManager ThemeManager { get; set; } = null!;
    [Inject] public NavigationManager NavManager { get; set; } = null!;
    
    private void RedirectToLoginPage() => NavManager.NavigateTo("/login", true);
}