@using Skills.Services
<MudDialog Class="pa-0 rounded-lg">
    <DialogContent>
        <MudIconButton Class="ml-n4" Icon="@IconsF.Close" Color="Color.Dark" OnClick="@(() => Dialog.Close())" />
        <MudStack Class="pb-2 px-4" Row="false" Spacing="0">
            <MudText Class="mark-one" Typo="Typo.h5" Align="Align.Center" GutterBottom>Hello!</MudText>
            <MudText Class="mark-one" Align="Align.Center" GutterBottom>Vous devez vous connecter <br/>pour accéder à ce contenu !</MudText>
            <MudButton Color="Color.Default" StartIcon="@IconsB.MicrosoftAzure" Href="MicrosoftIdentity/Account/SignIn" IconColor="Color.Dark" IconSize="Size.Large"
                       Class="mark-one mt-3 mb-2 hoverable" Style="text-transform: none; background-color: rgba(0, 0, 0, 0.058823529411764705);">
                Connectez-vous ici !
            </MudButton>
        </MudStack>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] public MudDialogInstance Dialog { get; set; } = null!;
    [Inject] public ThemeManager ThemeManager { get; set; } = null!;
}