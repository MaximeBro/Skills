@page "/skills"
@attribute [Authorize]


<MudText Class="mt-2 mark-one" Typo="Typo.h2" Align="Align.Center" GutterBottom>Compétences</MudText>

<MudContainer MaxWidth="MaxWidth.ExtraLarge">
    <MudDataGrid T="SkillModel" Items="_skills" Bordered Hover Outlined Filterable Striped SortMode="SortMode.Multiple" Dense FixedHeader
                 Culture="@(new CultureInfo("fr-FR"))" Height="70vh" Virtualize OverscanCount="25" QuickFilter="@QuickFilter">
        <ToolBarContent>
            <MudSpacer/>
            <MudTextField T="string" @bind-Value="_search" Placeholder="Rechercher" Immediate Adornment="Adornment.Start" AdornmentIcon="@IconsF.Search" />
        </ToolBarContent>
        <Columns>
            <PropertyColumn Title="Type" Property="x => x.Type" />
            <PropertyColumn Title="Catégorie" Property="x => x.Category" />
            <PropertyColumn Title="Sous catégorie" Property="x => x.SubCategory" />
            <PropertyColumn Title="Description" Property="x => x.Description" />
        </Columns>
    </MudDataGrid>
</MudContainer>