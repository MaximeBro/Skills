@page "/"
@page "/dashboard"
@attribute [Authorize]

<PageTitle>@ThemeManager.Get("name") - Skills</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge">
    <MudText Class="mt-2 mark-one" Align="Align.Center" Typo="Typo.h2" GutterBottom>@ThemeManager.Get("name")</MudText>
    <MudGrid Justify="Justify.Center">
        <MudItem xs="4">
            <MudPaper Class="px-6 py-4" Elevation="3">
                <MudLink Underline="Underline.Hover" Href="/users">
                    <MudStack Row>
                        <MudIcon Icon="@IconsF.People"/>
                        <MudText Class="mark-one">Utilisateurs</MudText>
                    </MudStack>
                </MudLink>
            </MudPaper>
        </MudItem>

        <MudItem xs="4">
            <MudPaper Class="px-6 py-4" Elevation="3">
                <MudLink Underline="Underline.Hover" Href="/skills">
                    <MudStack Row>
                        <MudIcon Icon="@IconsF.Checklist"/>
                        <MudText Class="mark-one">Compétences</MudText>
                    </MudStack>
                </MudLink>
            </MudPaper>
        </MudItem>
        
        <AuthorizeView Roles="Admin">
            <Authorized>
                <MudItem xs="4">
                    <MudPaper Class="px-6 py-4" Elevation="3">
                        <MudLink Color="Color.Tertiary" Underline="Underline.Hover" Href="/admin/users">
                            <MudText Class="mark-one" Color="Color.Tertiary">Administration</MudText>
                            <MudStack Row>
                                <MudIcon Icon="@IconsF.People"/>
                                <MudText Class="mark-one">Utilisateurs</MudText>
                            </MudStack>
                        </MudLink>
                    </MudPaper>
                </MudItem>

                <MudItem xs="4">
                    <MudPaper Class="px-6 py-4" Elevation="3">
                        <MudLink Color="Color.Tertiary" Underline="Underline.Hover" Href="/admin/skills">
                            <MudText Class="mark-one" Color="Color.Tertiary">Administration</MudText>
                            <MudStack Row>
                                <MudIcon Icon="@IconsF.Checklist"/>
                                <MudText Class="mark-one">Compétences</MudText>
                            </MudStack>
                        </MudLink>
                    </MudPaper>
                </MudItem>
            </Authorized>
        </AuthorizeView>
        
    </MudGrid>
</MudContainer>