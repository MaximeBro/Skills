@page "/"
@using System.Security.Claims
@inherits FullComponentBase

<PageTitle>@ThemeManager.Get("name") - Skills</PageTitle>

<MudContainer Class="pt-0 pt-md-6" MaxWidth="MaxWidth.ExtraLarge">
    <MudText Class="mt-2 open-sans-600" Align="Align.Center" Typo="Typo.h3" GutterBottom>Bienvenue sur Skills</MudText>
    <AuthorizeView Context="auth">
        <Authorized>
            <MudText Class="open-sans-600" Align="Align.Center" Typo="Typo.h4" GutterBottom>@auth.User.FindFirstValue("name")</MudText>
        </Authorized>
    </AuthorizeView>
</MudContainer>