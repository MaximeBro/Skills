@inherits FullComponentBase

<MudPaper id="education" Class="mt-6 pad-anchor" Elevation="2">
    <MudStack Class="px-4 py-3" Row="false" Spacing="2">
        <MudText Class="open-sans-600 bold">Diplômes</MudText>
        <MudStack Row="false" Spacing="0" Style="max-height: 400px; overflow-y: auto;">
            <MudCheckBox T="bool" ValueChanged="@SelectAllChanged" Value="@_selectAll" Label="Tout sélectionner"/>
            @foreach (var education in Editor.CvEducations.OrderByDescending(x => x.Value)
                          .ThenByDescending(x => x.Key.YearEnd))
            {
                <MudPaper Class="d-flex mb-3 px-4 py-1" Elevation="3" Style="flex-direction: row; align-items: center; background: transparent; backdrop-filter: brightness(0.90);">
                    <MudCheckBox T="bool" Value="@Editor.CvEducations[education.Key]" ValueChanged="@((value) => OnCheckChanged(value, education.Key))"/>
                    <MudStack Row="false" Spacing="0">
                        <MudStack Row Justify="Justify.FlexStart" AlignItems="AlignItems.Center">
                            <MudText Class="open-sans-600 bold" Color="Color.Primary" Align="Align.Left">@education.Key.Title</MudText> <MudText Class="open-sans-600 bold" Color="Color.Dark" Align="Align.Left">|</MudText> <MudText Class="open-sans-600 bold" Align="Align.Left">@education.Key.Supplier</MudText>
                        </MudStack>
                        <MudStack Row Justify="Justify.FlexStart" AlignItems="AlignItems.Center">
                            <MudText Class="open-sans-600">@education.Key.YearStart</MudText> - <MudText Class="open-sans-600">@education.Key.YearEnd</MudText> | <MudText Class="open-sans-600">@education.Key.Town</MudText>
                        </MudStack>
                        @if (!string.IsNullOrWhiteSpace(education.Key.Description))
                        {
                        <MudStack Row="false" Spacing="0">
                            @foreach (var line in education.Key.Description.Split("\n"))
                            {
                            <MudText Class="open-sans-600" Typo="Typo.subtitle2">@line</MudText>
                            }
                        </MudStack>
                        }
                    </MudStack>
                </MudPaper>
            }
        </MudStack>
    </MudStack>
</MudPaper>