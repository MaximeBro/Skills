@inherits FullComponentBase

<MudPaper id="safety" Class="mt-6 pad-anchor" Elevation="2">
    <MudStack Class="px-4 py-3" Row="false" Spacing="2">
        <MudText Class="open-sans-600 bold">Habilitations</MudText>
        <MudStack Class="px-6 py-2" Row="false" Spacing="0">
            @foreach (var group in _groupedCertifications.Keys)
            {
                <MudStack Row AlignItems="AlignItems.Center">
                    <MudText Class="open-sans-600 bold" Align="Align.Center">@group</MudText>
                    <MudGrid>
                        @foreach (var certification in _groupedCertifications[group])
                        {
                            @if (certification.Enabled)
                            {
                                <MudItem xs="6" md="3" lg="2">
                                    <MudCheckBox T="bool" Value="@(_userSafetyCertifications.Select(x => x.CertId).Contains(certification.Id))" Disabled ReadOnly
                                                 Label="@certification.Name" />
                                </MudItem>
                            }
                        }
                    </MudGrid>
                </MudStack>
            }
        </MudStack>
    </MudStack>
</MudPaper>