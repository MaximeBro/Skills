@inherits FullComponentBase

<MudPaper Class="mt-6" Elevation="2">
    <MudStack Class="px-4 py-3" Row="false" Spacing="2">
        <MudText Class="mark-one bold">Certifications</MudText>
        <MudStack Class="px-6 py-2" Row="false">
            @foreach (var certification in CvCertifications)
            {
                <MudPaper Class="rounded-lg mb-1 d-flex px-4 py-1" Elevation="2" Width="100%" Style="flex-direction: row; align-items: center;">
                    <MudStack Row="false" Spacing="0">
                        <MudStack Row Justify="Justify.FlexStart" AlignItems="AlignItems.Center">
                            <MudText Class="mark-one bold" Color="Color.Primary">@certification.Title</MudText> <MudText Class="mark-one bold" Color="Color.Dark">|</MudText> <MudText Class="mark-one bold" Color="Color.Dark">@certification.Supplier</MudText>
                        </MudStack>
                        <MudStack Row Justify="Justify.FlexStart" AlignItems="AlignItems.Center">
                            <MudText Class="mark-one">@certification.Year</MudText> - <MudText Class="mark-one">@certification.Duration</MudText>
                        </MudStack>
                    </MudStack>
                    <MudSpacer/>
                    <MudIconButton Class="hover-red" Icon="@IconsF.Delete" Size="Size.Small" OnClick="@(() => CvCertifications.Remove(certification))"/>
                </MudPaper>
            }
            <MudStack Row Justify="Justify.Center">
                <MudPaper Class="rounded-lg" Elevation="2" Width="100%" Style="@($"border: 2px dashed {ThemeManager.GetColor(Color.Primary)};")">
                    <MudStack Class="py-1" Row Justify="Justify.Center">
                        <MudTooltip Text="Ajouter une certification" Placement="Placement.Top" Arrow>
                            <MudIconButton Icon="@IconsR.AddCircle" Color="Color.Primary" Size="Size.Small" OnClick="@(async () => await CreateCertificationAsync())"/>
                        </MudTooltip>
                    </MudStack>
                </MudPaper>
            </MudStack>
        </MudStack>
    </MudStack>
</MudPaper>