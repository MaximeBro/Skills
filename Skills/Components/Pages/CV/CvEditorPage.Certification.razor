@inherits FullComponentBase

<MudPaper id="certifications" Class="mt-6 pad-anchor" Elevation="2">
    <MudStack Class="px-4 py-3" Row="false" Spacing="2">
        <MudText Class="open-sans-600 bold">Certifications</MudText>
        <MudStack Row="false" Spacing="0" Style="max-height: 400px; overflow-y: auto;">
            <MudCheckBox T="bool" ValueChanged="@SelectAllChanged" Value="@_selectAll" Label="Tout sÃ©lectionner"/>
            @foreach (var certification in Editor.CvCertifications.OrderByDescending(x => x.Value))
            {
                <MudPaper Class="d-flex mb-1 px-4 py-1" Style="flex-direction: row; align-items: center;">
                    <MudCheckBox T="bool" Value="@Editor.CvCertifications[certification.Key]" ValueChanged="@((value) => OnCheckChanged(value, certification.Key))"/>
                    <MudStack Row="false" Spacing="0">
                        <MudStack Row Justify="Justify.FlexStart" AlignItems="AlignItems.Center">
                            <MudText Class="open-sans-600 bold" Color="Color.Primary">@certification.Key.Title</MudText> <MudText Class="open-sans-600 bold" Color="Color.Dark">|</MudText> <MudText Class="open-sans-600 bold" Color="Color.Dark">@certification.Key.Supplier</MudText>
                        </MudStack>
                        <MudStack Row Justify="Justify.FlexStart" AlignItems="AlignItems.Center">
                            <MudText Class="open-sans-600">@certification.Key.Year</MudText> - <MudText Class="open-sans-600">@certification.Key.Duration</MudText>
                        </MudStack>
                    </MudStack>
                    <MudSpacer/>
                </MudPaper>
            }
        </MudStack>
    </MudStack>
</MudPaper>