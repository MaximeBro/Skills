@inherits FullComponentBase

<MudPaper Class="mt-6" Elevation="2">
    <MudStack Class="px-4 py-3" Row="false" Spacing="2" Style="max-height: 400px; overflow-y: scroll;">
        <MudStack Row AlignItems="AlignItems.Center">
            <MudText Class="mark-one bold mr-2">Comp√©tences</MudText>
            <MudSelect T="int" Value="_level" ValueChanged="@LevelChangedAsync" Label="Niveau minimum" Class="flex-shrink-0" Style="max-width: 250px;" 
                       AnchorOrigin="Origin.BottomLeft" TransformOrigin="Origin.TopLeft">
                <MudSelectItem Value="0">0</MudSelectItem>
                <MudSelectItem Value="1">1</MudSelectItem>
                <MudSelectItem Value="2">2</MudSelectItem>
                <MudSelectItem Value="3">3</MudSelectItem>
                <MudSelectItem Value="4">4</MudSelectItem>
            </MudSelect>
        </MudStack>
        @foreach (var skill in ChosenSkills.OrderByDescending(x => x.Value))
        {
            <MudPaper Class="d-flex mb-1 px-4 py-1" Style="flex-direction: row; align-items: center;">
                <MudCheckBox T="bool" @bind-Value="@ChosenSkills[skill.Key]"/>
                <MudText Class="mark-one">@skill.Key.ToString()</MudText>
            </MudPaper>
        }
    </MudStack>
</MudPaper>