@inherits  FullComponentBase

<MudMenu @ref="_menu" Icon="@IconsR.MoreVert" Class="@($"icon-hoverable white-all {Class}")" ActivationEvent="MouseEvent.LeftClick" PopoverClass="dark-bg" ListClass="rounded-lg" 
         AnchorOrigin="Origin.BottomRight" TransformOrigin="Origin.TopRight">
    <MudStack Class="pt-1" Row="false" Spacing="0" Style="min-width: 200px;">
        <MudStack Row Class="px-4" Justify="Justify.Center">
            <MudText Class="text-white" Typo="Typo.h6" Align="Align.Center">Préférences</MudText>
        </MudStack>
        <MudDivider Class="my-2" Style="border-color: grey!important;" DividerType="DividerType.FullWidth"/>
        <MudStack Row="false" Class="px-4" Justify="Justify.Center" Spacing="0">
            <div>
                <MudCheckBox T="bool" Value="@IsDarkTheme" ValueChanged="@(async(value) => await SwitchThemeAsync(value))" Class="text-white" Label="@($"{(IsDarkTheme ? "Thème clair" : "Thème sombre")}")" 
                             Color="Color.Inherit" UnCheckedColor="Color.Inherit" CheckedIcon="@IconsR.LightMode" UncheckedIcon="@IconsR.DarkMode"/>
            </div>
            <div>
                <MudSwitch T="bool" Value="@_french" ValueChanged="@(async(value) => await SwitchLanguageAsync(value))" Class="white-all pl-2" 
                           ThumbIcon="@(_french ? _frenchSvg : _englishSvg)" Label="@($"{(_french ? "Français (FR)" : "English (US)")}")" Color="Color.Secondary"/>
            </div>
        </MudStack>
    </MudStack>
</MudMenu>