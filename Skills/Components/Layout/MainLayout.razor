@inherits LayoutComponentBase

<MudThemeProvider DefaultScrollbar Theme="@_theme" IsDarkMode="false"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <NavBar/>
    <MudMainContent> @* Padding-top used for appbar space only *@
        <MudContainer MaxWidth="MaxWidth.False" Class="pa-0 ma-0 mb-4" Style="min-height: calc(100vh - 64px);">
            @Body
        </MudContainer>
    </MudMainContent>
    <NavFooter/>

    @if (Environment.IsDevelopment())
    {
        <div id="blazor-error-ui">
            An unhandled error has occurred.
            <a href="" class="reload">Reload</a>
            <a class="dismiss">🗙</a>.
        </div>
    }
</MudLayout>